                <category android:name="com.globaldelight.boom" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.mixpanel.android.MPConfig.DisableViewCrawler"
            android:value="true" />

        <meta-data
            android:name="io.fabric.ApiKey"
