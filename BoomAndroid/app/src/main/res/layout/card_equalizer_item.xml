<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/effect_eq_item_height"
    android:elevation="12dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/eq_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ninty_six_px"/>

    <com.globaldelight.boom.ui.widgets.RegularTextView
        android:id="@+id/eq_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/effect_eq_title_size"
        android:layout_marginLeft="@dimen/one_zero_four_px"
        android:maxLines="1"
        android:textColor="@color/dialog_txt"/>
</LinearLayout>