<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_in_app_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/black"
    tools:context="com.globaldelight.boom.purchase.InAppPurchaseActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/one_thousand_one_hundered_fourty"
                    android:layout_alignParentStart="true"
                    app:srcCompat="@drawable/boom_android_store" />

                <com.globaldelight.boom.ui.widgets.RegularTextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/one_hundred_fourty_eight_pt"
                    android:gravity="center_horizontal"
                    android:text="@string/purchase_item_title"
                    android:textColor="@color/white"

                    android:textSize="@dimen/purchase_item_title_size" />

                <com.globaldelight.boom.ui.widgets.RegularTextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/ninety_two_pt"
                    android:gravity="center_horizontal"
                    android:text="@string/purchase_item_desc1"
                    android:textColor="@color/purchase_desc_color"
                    android:textSize="@dimen/purchase_item_desc_size" />

                <com.globaldelight.boom.ui.widgets.RegularTextView
                    android:id="@+id/regularTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/purchase_item_desc2"
                    android:textColor="@color/purchase_desc_color"
                    android:textSize="@dimen/purchase_item_desc_size"
                    android:typeface="normal" />

                <com.globaldelight.boom.ui.widgets.RegularButton
                    android:id="@+id/buyButton"
                    android:layout_width="@dimen/one_thousand_twenty_eight"
                    android:layout_height="@dimen/two_hundred_eight"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/two_hundred_sixty_four"
                    android:background="@drawable/purchase_button"
                    android:text="@string/purchase_buton_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/purchase_item_button_size"
                    android:typeface="normal" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/two_hundred_fourty_eight"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/line_view"
                    android:visibility="visible" />

                <com.globaldelight.boom.ui.widgets.RegularButton
                    android:id="@+id/restore"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="@string/purchase_restore_txt"
                    android:textColor="@color/white" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
