<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/onBoardingBG">

        <ImageView
            android:id="@+id/img_intro_onboard_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_on_boarding_effects" />

        <TextView
            android:id="@+id/txt_title_1"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_intro_onboard_1"
            android:padding="5dp"
            android:text="@string/onboard_screen_1_main_tx"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_below="@+id/txt_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/onboard_screen_1_sub_tx"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textColor="@android:color/darker_gray"
            android:textSize="15dp" />

    </RelativeLayout>

</FrameLayout>