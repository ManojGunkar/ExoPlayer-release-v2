<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred__eight_pt"
        android:orientation="vertical">


        <com.globaldelight.boom.ui.widgets.RegularTextView
            android:id="@+id/queue_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/sixty_four_pt"
            android:maxLines="1"
            android:textColor="@color/upnext_header_title"
            android:textSize="@dimen/play_queue_header_txt"
            android:textStyle="normal" />

        <com.globaldelight.boom.ui.widgets.RegularTextView
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/sixty_four_pt"
            android:maxLines="1"
            android:textColor="@color/upnext_header_clear"
            android:textSize="@dimen/play_queue_header_txt"
            android:typeface="normal"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/upnext_header_separator"/>
</LinearLayout>