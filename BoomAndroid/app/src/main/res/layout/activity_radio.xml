<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/toolbar"/>

    </android.support.design.widget.AppBarLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_radio"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:tabGravity="fill"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:tabIndicatorHeight="@dimen/pager_tab_indicator_height"
        android:elevation="0dp"
        app:tabIndicatorColor="@color/music_tab_indicator_color"
        app:tabTextColor="@color/music_tab_selected_color"
        app:tabSelectedTextColor="@color/music_tab_normal_color"
        app:tabTextAppearance="@style/CustomTabBarStyle" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_radio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>