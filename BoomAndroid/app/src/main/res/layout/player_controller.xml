<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_seek_top_panel_height"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/progress_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/player_seek_margin_top"
        android:layout_marginLeft="@dimen/player_seek_margin"
        android:layout_marginRight="@dimen/player_seek_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/played_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/player_seek_time_size"
            android:layout_weight="0"/>

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/control_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="inherit"
            android:layout_weight="1"
            android:progress="100"/>

        <TextView
            android:id="@+id/remain_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/player_seek_time_size"
            android:layout_weight="0"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_control_top_panel_height"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/player_controller_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_control_height"
        android:layout_marginTop="@dimen/player_control_margin_top"
        android:layout_marginBottom="@dimen/player_control_margin_bottom"
        android:layout_marginLeft="@dimen/player_control_margin_left"
        android:layout_marginRight="@dimen/player_control_margin_right"
        android:gravity="center"
        android:weightSum="5.8"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/controller_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/unbounded_ripple"
                android:src="@drawable/ic_repeat_off" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/controller_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/unbounded_ripple"
                android:src="@drawable/ic_player_previous" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:gravity="center">
            <ImageView
                android:id="@+id/controller_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/unbounded_ripple"
                android:src="@drawable/ic_player_play" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/controller_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/unbounded_ripple"
                android:src="@drawable/ic_player_next" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/controller_shuffle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/unbounded_ripple"
                android:src="@drawable/ic_shuffle_off" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_control_bottom_panel_height"
        android:orientation="horizontal" />

</LinearLayout>