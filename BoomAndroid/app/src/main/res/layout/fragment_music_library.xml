<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout android:id="@+id/library_tab_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:tabMode="scrollable"
            app:tabGravity="fill"
            android:elevation="10dp"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:tabIndicatorHeight="@dimen/pager_tab_indicator_height"
            app:tabIndicatorColor="@color/music_tab_indicator_color"
            app:tabTextColor="@color/music_tab_selected_color"
            app:tabSelectedTextColor="@color/music_tab_normal_color"
            app:tabTextAppearance="@style/CustomTabBarStyle"
            />

        <LinearLayout
            android:id="@+id/lib_add_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_height"
            android:visibility="gone"
            android:orientation="horizontal"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</FrameLayout>
