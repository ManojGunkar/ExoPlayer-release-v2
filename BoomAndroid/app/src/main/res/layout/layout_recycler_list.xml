<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <include layout="@layout/recycler_view_layout"/>

    <LinearLayout
        android:id="@+id/list_empty_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:id="@+id/list_empty_placeholder_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.globaldelight.boom.ui.widgets.RegularTextView
            android:id="@+id/list_empty_placeholder_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>