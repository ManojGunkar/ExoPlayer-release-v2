<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center">
    <FrameLayout android:layout_width="284dp"
        android:layout_height="320dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="47dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/ic_speaker_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:src="@drawable/ic_bg_gradient_active"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:src="@drawable/ic_man_on"/>
            </LinearLayout>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true">

            <ImageView
                android:id="@+id/speaker_sub_woofer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/speakers_woofer"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/speaker_right_surround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="78dp"
                android:src="@drawable/speakers_right_rear" />

            <ImageView
                android:id="@+id/speaker_left_surround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/speaker_right_surround"
                android:src="@drawable/speakers_left_rear" />

            <ImageView
                android:id="@+id/speaker_right_tweeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/speaker_left_surround"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/speakers_tweeter_right" />

            <ImageView
                android:id="@+id/speaker_right_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/speaker_right_tweeter"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="58dp"
                android:layout_marginRight="43dp"
                android:src="@drawable/speakers_right_front" />

            <ImageView
                android:id="@+id/speaker_left_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/speaker_left_tweeter"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="58dp"
                android:layout_marginLeft="43dp"
                android:src="@drawable/speakers_left_front" />

            <ImageView
                android:id="@+id/speaker_left_tweeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/speaker_left_surround"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/speakers_tweeter_left" />
        </RelativeLayout>

    </FrameLayout>
</LinearLayout>