<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center">
    <FrameLayout android:layout_width="@dimen/speaker_panel_width"
        android:layout_height="@dimen/speaker_panel_height"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/speaker_panel_margin_bottom"
            android:layout_marginLeft="@dimen/speaker_panel_margin_left"
            android:layout_marginRight="@dimen/speaker_panel_margin_right"
            android:layout_marginTop="@dimen/speaker_panel_margin_top"
            android:background="@drawable/ic_speaker_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:src="@drawable/ic_bg_gradient_active"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:src="@drawable/ic_man_active"/>
            </LinearLayout>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true">

            <ImageView
                android:id="@+id/speaker_sub_woofer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_woofer_active" />

            <ImageView
                android:id="@+id/speaker_right_surround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="78dp"
                android:src="@drawable/ic_speakers_r_surround_active" />

            <ImageView
                android:id="@+id/speaker_left_surround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/speaker_right_surround"
                android:src="@drawable/ic_speakers_l_surround_active" />

            <ImageView
                android:id="@+id/speaker_right_tweeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/speaker_left_surround"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/ic_tweeter_r_active" />

            <ImageView
                android:id="@+id/speaker_right_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/speaker_right_tweeter"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="58dp"
                android:layout_marginRight="43dp"
                android:src="@drawable/ic_speakers_r_front_active" />

            <ImageView
                android:id="@+id/speaker_left_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/speaker_left_tweeter"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="58dp"
                android:layout_marginLeft="43dp"
                android:src="@drawable/ic_speakers_l_front_active" />

            <ImageView
                android:id="@+id/speaker_left_tweeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/speaker_left_surround"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/ic_tweeter_l_active" />
        </RelativeLayout>

    </FrameLayout>
</LinearLayout>