<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tooltip_bg"

    android:orientation="horizontal">


    <com.globaldelight.boom.ui.widgets.CoachMarkTextView
        android:id="@+id/tooltip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/tutorial_use_headphones"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tooltip_txt"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_close_dark" />


</LinearLayout>