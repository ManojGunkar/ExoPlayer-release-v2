<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favourite_list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <android.support.v7.widget.Toolbar
        android:id="@+id/favourite_list_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        app:theme="@style/ToolbarSearchTheme">

        <com.globaldelight.boom.ui.widgets.RegularTextView
            android:id="@+id/favourite_list_toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_titile"
            android:textStyle="normal" />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_favourite_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/favourite_list_toolbar"
        android:layout_above="@+id/favourite_mini_player"
        android:layout_gravity="center_horizontal|top"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <LinearLayout
        android:id="@+id/fav_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center"
        android:layout_below="@+id/favourite_list_toolbar"
        android:layout_above="@+id/favourite_mini_player"
        android:orientation="vertical" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favourites_placeholder"/>
        <com.globaldelight.boom.ui.widgets.RegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#787878"
            android:gravity="center"
            android:textSize="@dimen/eighty_eighty_pt"
            android:text="@string/fav_placeholder_txt"
            android:layout_marginTop="@dimen/ninety_six_pt"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/favourite_mini_player"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mini_player_height"
        android:elevation="12dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true">
        <include
            layout="@layout/mini_player"/>
    </LinearLayout>

</RelativeLayout>