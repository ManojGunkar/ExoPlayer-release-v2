<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/card_cat_radio"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"
            android:shape="ring"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/img_category_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default_art_grid" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_title_category_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/card_cat_radio"
            android:layout_toLeftOf="@+id/img_path_arrow"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="title"
            android:textColor="@color/track_selection"
            android:textSize="18sp"
            android:textStyle="normal" />

            <ImageView
                android:id="@+id/img_path_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/path" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/library_separator" />

</LinearLayout>