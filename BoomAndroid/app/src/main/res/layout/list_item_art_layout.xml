<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">
    <ImageView
        android:id="@+id/song_item_img"
        android:layout_width="@dimen/track_list_album_art_size"
        android:layout_height="@dimen/track_list_album_art_size"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/song_item_img_overlay"
        android:layout_width="@dimen/track_list_album_art_size"
        android:layout_height="@dimen/track_list_album_art_size"
        android:background="@color/player_background"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/song_item_img_overlay_play"
        android:layout_width="@dimen/track_list_album_art_size"
        android:layout_height="@dimen/track_list_album_art_size"
        android:padding="@dimen/track_list_album_art_overlay_padding"
        android:scaleType="fitXY"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/load_cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/track_list_album_art_overlay_padding"
        android:visibility="gone"/>
</FrameLayout>