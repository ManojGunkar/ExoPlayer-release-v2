<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/song_item_img"
        android:layout_width="@dimen/track_list_album_art_size"
        android:layout_height="@dimen/track_list_album_art_size"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_song_index"
        android:layout_width="@dimen/track_list_album_art_size"
        android:layout_height="@dimen/track_list_album_art_size"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="18dp"
        android:visibility="gone" />

    <View
        android:id="@+id/song_item_img_overlay"
        android:layout_width="@dimen/track_list_album_art_size"
        android:layout_height="@dimen/track_list_album_art_size"
        android:layout_centerInParent="true"
        android:background="#4D000000"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/song_item_img_overlay_play"
        android:layout_width="@dimen/track_list_album_art_size"
        android:layout_height="@dimen/track_list_album_art_size"
        android:layout_centerInParent="true"
        android:padding="@dimen/track_list_album_art_overlay_padding"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/load_cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>