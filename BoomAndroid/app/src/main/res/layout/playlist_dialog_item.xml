<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.globaldelight.boom.ui.widgets.RegularTextView
            android:id="@+id/playlist_dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <com.globaldelight.boom.ui.widgets.RegularTextView
            android:id="@+id/playlist_dialog_song_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/playlist_dialog_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_weight="0"
        android:visibility="gone"
        android:background="@drawable/unbounded_ripple"
        android:foregroundTint="#434343"
        android:padding="5dp"
        android:src="@drawable/over_flow_menu"
        android:theme="@style/Theme.AppCompat.Light" />
</LinearLayout>