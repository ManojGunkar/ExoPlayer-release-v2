<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_hunderd_twenty_px"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:weightSum="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight=".8">

            <com.globaldelight.boom.ui.widgets.RegularTextView
                android:id="@+id/album_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/one_fifty_six_pt"
                android:maxLines="1"
                android:textColor="@color/track_title"
                android:textSize="@dimen/seventy_two_pt_txt" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/one_hundred_four_px"
                android:orientation="vertical">
                <com.globaldelight.boom.ui.widgets.RegularTextView
                    android:id="@+id/album_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="@color/track_sub_title"
                    android:textSize="@dimen/seventy_two_pt_txt"  />

                <com.globaldelight.boom.ui.widgets.RegularTextView
                    android:id="@+id/album_item_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/track_sub_title"
                    android:textSize="@dimen/fifty_six_pt_txt"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:layout_marginRight="@dimen/fifty_eight_pt"
            android:gravity="center_vertical|right">
            <ImageView
                android:id="@+id/album_item_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/unbounded_ripple"
                android:foregroundTint="#434343"
                android:padding="5dp"
                android:src="@drawable/over_flow_menu"
                android:theme="@style/Theme.AppCompat.Light" />

            <CheckBox
                android:id="@+id/song_chk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundTint="#434343"
                android:backgroundTint="#434343"
                android:elevation="12dp"
                android:theme="@style/MyCheckBox"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/library_separator"/>
</LinearLayout>