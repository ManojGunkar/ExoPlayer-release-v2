<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_title_logo_local_radio"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_art_grid" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="5dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_title_local_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:padding="5dp"
            android:maxLines="1"
            android:gravity="center"
            android:text="title"
            android:textColor="@color/track_selection"
            android:textSize="@dimen/card_song_item_title_txt"
            android:textStyle="normal" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_sub_title_local_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center"
            android:text="sub title"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/card_song_item_sub_title_txt"
            android:textStyle="normal" />
    </LinearLayout>

     <ImageView
         android:id="@+id/img_fav_radio_station"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:padding="5dp"
         android:layout_marginRight="5dp"
         android:layout_centerVertical="true"
         android:layout_alignParentRight="true"
         android:src="@drawable/fav_normal"/>

</RelativeLayout>