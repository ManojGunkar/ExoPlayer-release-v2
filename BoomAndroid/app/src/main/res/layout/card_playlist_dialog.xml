<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_playlist_dialog_margin"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.globaldelight.boom.view.RegularTextView
            android:id="@+id/playlist_dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textStyle="normal"
            android:textColor="@color/dialog_txt"
            android:textSize="@dimen/card_playlist_dialog_item_title_txt" />

        <com.globaldelight.boom.view.RegularTextView
            android:id="@+id/playlist_dialog_song_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:maxLines="1"
            android:textColor="@color/dialog_txt"
            android:textSize="@dimen/card_playlist_dialog_item_title_txt" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0"
        android:background="@color/dialog_list_separator" />
</LinearLayout>