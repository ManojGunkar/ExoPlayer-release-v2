<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/popup_margin_bottom"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_popup_image" />

    <com.globaldelight.boom.ui.widgets.RegularTextView
        android:id="@+id/expire_popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/popup_margin_bottom"
        android:gravity="center"
        android:text="@string/business_primary_dialog_title"
        android:textColor="@color/dialog_title"
        android:textSize="@dimen/share_popup_title_size"
        android:textStyle="bold"/>


    <com.globaldelight.boom.ui.widgets.RegularTextView
        android:id="@+id/expire_popup_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/popup_margin_bottom"
        android:gravity="center"
        android:paddingLeft="@dimen/share_popup_body_margin_side"
        android:paddingRight="@dimen/share_popup_body_margin_side"
        android:text="@string/business_primary_dialog_content"
        android:textColor="@color/share_popup_body"
        android:textSize="@dimen/share_popup_body_size"/>

</LinearLayout>