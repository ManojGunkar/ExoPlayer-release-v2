<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/three_d_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/effect_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ToolbarSearchTheme">

        <com.globaldelight.boom.ui.widgets.RegularTextView
            android:id="@+id/toolbr_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:maxLines="1"
            android:text="@string/title_effects"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_titile"
            android:textStyle="normal" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/effect_switch_panel"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/effect_powerpanel"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:gravity="center_vertical|start"
            android:orientation="horizontal">

            <com.globaldelight.boom.ui.widgets.RegularTextView
                android:id="@+id/effect_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/one_hundred_fourty_eight_pt"
                android:maxLines="1"
                android:text="@string/title_effects"
                android:textColor="@color/white"
                android:textSize="@dimen/effect_switch_txt"
                android:textStyle="normal" />

            <com.globaldelight.boom.ui.widgets.RegularTextView
                android:id="@+id/effect_switch_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty_pt"
                android:maxLines="1"
                android:text="@string/switch_on"
                android:textColor="#ffffff"
                android:textSize="@dimen/effect_switch_txt"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight=".2"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/effect_power_switch"
                style="@style/RedSwitch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/one_ten_pt"
                android:theme="@style/RedSwitch" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/effect_panel_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/one_ten_pt">

                    <ImageView
                        android:id="@+id/three_d_switch_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/one_fifty_two_pt"
                        android:src="@drawable/three_d_surround_off" />

                    <com.globaldelight.boom.ui.widgets.RegularTextView
                        android:id="@+id/three_d_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/speaker_switch_btn"
                        android:layout_marginStart="@dimen/seventy_four_pt"

                        android:layout_toEndOf="@+id/three_d_switch_btn"
                        android:maxLines="1"
                        android:text="@string/title_3d_surround"
                        android:textColor="@color/white"
                        android:textSize="@dimen/toolbar_titile"
                        android:textStyle="normal" />

                    <com.globaldelight.boom.ui.widgets.RegularTextView
                        android:id="@+id/three_d_switch_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignBaseline="@+id/three_d_txt"
                        android:layout_marginStart="@dimen/twenty_pt"
                        android:layout_toEndOf="@+id/three_d_txt"
                        android:maxLines="1"
                        android:text="@string/switch_on"

                        android:textColor="@color/white"
                        android:textSize="@dimen/toolbar_titile"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/speaker_switch_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/one_fifty_six_pt"
                        android:src="@drawable/ic_three_d_speakers_inactive" />

                    <com.globaldelight.boom.ui.widgets.RegularTextView
                        android:id="@+id/speaker_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/three_d_txt"
                        android:layout_below="@+id/three_d_txt"
                        android:layout_marginTop="@dimen/fourty_four_pt"
                        android:maxLines="1"
                        android:text="@string/speaker_status_some_off"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sixty_pt_txt" />

                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/full_bass_panel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="95dp"
                    android:layout_marginTop="@dimen/fourty_four_pt"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/full_bass_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/full_bass_off" />

                    <com.globaldelight.boom.ui.widgets.RegularTextView
                        android:id="@+id/fullbass_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifty_six_pt"
                        android:maxLines="1"
                        android:text="@string/full_bass"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fullbass_txt"
                        android:textStyle="normal" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/collapsable_layout"
                android:layout_width="@dimen/one_one_three_four_pt"
                android:layout_height="@dimen/one_one_nine_four_pt"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/eighty_eighty_pt"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/one_hundred_eighty_six_pt"
                    android:layout_marginLeft="@dimen/twenty_two_pt"
                    android:layout_marginRight="@dimen/twenty_two_pt"
                    android:layout_marginTop="@dimen/four_px"
                    android:background="@drawable/ic_speaker_backgrounf">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/speaker_center_man_bg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:src="@drawable/ic_bg_gradient_active"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/speaker_center_man"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:src="@drawable/ic_man_active"/>
                    </LinearLayout>

                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true">

                    <ImageView
                        android:id="@+id/speaker_sub_woofer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_woofer_active" />

                    <ImageView
                        android:id="@+id/speaker_right_surround"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="78dp"
                        android:src="@drawable/ic_speakers_r_surround_active" />

                    <ImageView
                        android:id="@+id/speaker_left_surround"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/speaker_right_surround"
                        android:src="@drawable/ic_speakers_l_surround_active" />

                    <ImageView
                        android:id="@+id/speaker_right_tweeter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/speaker_left_surround"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="30dp"
                        android:layout_marginRight="6dp"
                        android:src="@drawable/ic_tweeter_r_active" />

                    <ImageView
                        android:id="@+id/speaker_right_front"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/speaker_right_tweeter"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="58dp"
                        android:layout_marginRight="43dp"
                        android:src="@drawable/ic_speakers_r_front_active" />

                    <ImageView
                        android:id="@+id/speaker_left_front"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/speaker_left_tweeter"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="58dp"
                        android:layout_marginLeft="43dp"
                        android:src="@drawable/ic_speakers_l_front_active" />

                    <ImageView
                        android:id="@+id/speaker_left_tweeter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/speaker_left_surround"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="30dp"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/ic_tweeter_l_active" />
                </RelativeLayout>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/one_twenty_pt"
                android:layout_marginRight="@dimen/one_twenty_pt"
                android:layout_marginTop="@dimen/one_fifty_four_pt"
                android:background="#222327" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/one_ten_pt">

                <ImageView
                    android:id="@+id/intensity_switch_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="@dimen/one_fifty_two_pt"
                    android:src="@drawable/intensity_off" />


                <com.globaldelight.boom.ui.widgets.RegularTextView
                    android:id="@+id/intensity_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/intensity_switch_btn"
                    android:layout_marginStart="@dimen/seventy_four_pt"

                    android:layout_toEndOf="@+id/intensity_switch_btn"
                    android:maxLines="1"
                    android:text="@string/title_intensity"
                    android:textColor="@color/white"
                    android:textSize="@dimen/toolbar_titile"
                    android:textStyle="normal" />

                <com.globaldelight.boom.ui.widgets.RegularTextView
                    android:id="@+id/intensity_switch_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_alignBaseline="@+id/intensity_txt"
                    android:layout_marginStart="@dimen/twenty_pt"
                    android:layout_toEndOf="@+id/intensity_txt"
                    android:maxLines="1"
                    android:text="@string/switch_on"
                    android:textColor="@color/white"
                    android:textSize="@dimen/toolbar_titile"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/intensity_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ninety_two_pt"
                    android:layout_toEndOf="@+id/intensity_switch_txt"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/twelve_pt"
                        android:layout_marginTop="@dimen/twelve_pt"
                        android:background="@color/progress_gray" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/twenty_pt"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.globaldelight.boom.ui.widgets.RegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="@string/req_of_3d"
                            android:textColor="@color/boom_yellow"
                            android:textSize="@dimen/sixty_pt_txt"
                            android:textStyle="normal" />

                        <com.globaldelight.boom.ui.widgets.RegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="@string/req_intensity"
                            android:textColor="@color/boom_yellow"
                            android:textSize="@dimen/sixty_pt_txt"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>

                <com.globaldelight.boom.ui.widgets.NegativeSeekBar
                    android:id="@+id/intensity_seek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:thumbTint="#bfbfbf"
                    android:layout_alignStart="@+id/intensity_switch_btn"
                    android:layout_below="@+id/intensity_switch_btn"
                    android:layout_marginRight="@dimen/one_fifty_six_pt"
                    android:layout_marginTop="@dimen/one_thirty_two_pt"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@android:color/transparent"

                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/one_twenty_pt"
                android:layout_marginRight="@dimen/one_twenty_pt"
                android:layout_marginTop="@dimen/one_fifty_four_pt"
                android:background="@color/line_view" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/one_ten_pt">


                <ImageView
                    android:id="@+id/equalizer_switch_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/one_fifty_two_pt"
                    android:src="@drawable/equalizer_off" />


                <com.globaldelight.boom.ui.widgets.RegularTextView
                    android:id="@+id/equalizer_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/equalizer_switch_btn"
                    android:layout_marginStart="@dimen/seventy_four_pt"

                    android:layout_toEndOf="@+id/equalizer_switch_btn"
                    android:maxLines="1"
                    android:text="@string/title_equalizer"
                    android:textColor="@color/white"
                    android:textSize="@dimen/toolbar_titile"
                    android:textStyle="normal" />

                <com.globaldelight.boom.ui.widgets.RegularTextView
                    android:id="@+id/equalizer_switch_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_alignBaseline="@+id/equalizer_txt"
                    android:layout_marginStart="@dimen/twenty_pt"
                    android:layout_toEndOf="@+id/equalizer_txt"
                    android:maxLines="1"
                    android:text="@string/switch_on"
                    android:textColor="@color/white"
                    android:textSize="@dimen/toolbar_titile"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/equalizer_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ninety_two_pt"
                    android:layout_toEndOf="@+id/equalizer_switch_txt"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/twelve_pt"
                        android:layout_marginTop="@dimen/twelve_pt"
                        android:background="@color/progress_gray" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/twenty_pt"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.globaldelight.boom.ui.widgets.RegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="@string/req_of_3d"
                            android:textColor="@color/boom_yellow"
                            android:textSize="@dimen/sixty_pt_txt"
                            android:textStyle="normal" />

                        <com.globaldelight.boom.ui.widgets.RegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="@string/req_equlaizer"
                            android:textColor="@color/boom_yellow"
                            android:textSize="@dimen/sixty_pt_txt"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/eq_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/equalizer_switch_btn"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="@dimen/one_thirty_two_pt"
                    android:overScrollMode="never" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/one_twenty_pt"
                android:layout_marginRight="@dimen/one_twenty_pt"
                android:layout_marginTop="@dimen/one_fifty_four_pt"
                android:background="#222327"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>