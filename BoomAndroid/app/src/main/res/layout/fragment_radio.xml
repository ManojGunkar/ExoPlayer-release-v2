<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_radio"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="0dp"
        android:minHeight="?attr/actionBarSize"
        app:tabMode="fixed"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/music_tab_indicator_color"
        app:tabIndicatorHeight="@dimen/pager_tab_indicator_height"
        app:tabSelectedTextColor="@color/music_tab_normal_color"
        app:tabTextAppearance="@style/CustomTabBarStyle"
        app:tabTextColor="@color/music_tab_selected_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_radio"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>