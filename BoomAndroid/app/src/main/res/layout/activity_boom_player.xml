<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/player_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/player_root_view"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:background="@color/appBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.031"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5.0"
                android:layout_marginLeft="@dimen/eighty_px"
                android:layout_marginRight="@dimen/eighty_px"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="12.345">
                    <ImageView
                        android:id="@+id/player_shuffle_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/thirty_two_px"
                    android:paddingRight="@dimen/thirty_two_px"
                    android:layout_weight="75.31">
                    <com.globaldelight.boom.ui.widgets.RegularTextView
                        android:textStyle="bold"
                        android:textSize="@dimen/toolbar_titile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="#c3cc20"
                        android:maxLines="1"
                        android:id="@+id/player_title_txt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:layout_weight="12.345">
                    <ImageView
                        android:id="@+id/player_repeat_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.296"
                android:layout_marginLeft="@dimen/two_px"
                android:layout_marginRight="@dimen/two_px"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="14.5">
                    <com.globaldelight.boom.ui.widgets.RegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/played_time"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sixty_eight_pt1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/thirty_two_px"
                    android:paddingRight="@dimen/thirty_two_px"
                    android:gravity="center"
                    android:layout_weight="70">
                    <com.globaldelight.boom.ui.widgets.RegularTextView
                        android:textStyle="normal"
                        android:textSize="@dimen/sixty_eight_pt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/white"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:id="@+id/player_subtitle_txt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="15.5">
                    <com.globaldelight.boom.ui.widgets.RegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/remains_time"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sixty_eight_pt"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8.413"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="36.125"
                android:layout_gravity="center">

                <com.globaldelight.boom.ui.widgets.CoverView.CircularCoverView
                    android:layout_width="@dimen/home_album_art_size"
                    android:layout_height="@dimen/home_album_art_size"
                    android:layout_gravity="center"
                    android:id="@+id/album_art"/>

                <com.globaldelight.boom.ui.widgets.CircularSeekBar
                    android:layout_width="@dimen/eight_hundred_thirty_two"
                    android:layout_height="@dimen/eight_hundred_thirty_two"
                    android:padding="@dimen/twenty_eight_px"
                    android:layout_gravity="center"
                    android:id="@+id/track_seek"/>

                <ImageView
                    android:id="@+id/play_pause_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.015"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5.156"
                android:layout_marginLeft="@dimen/two_hundred_sixteen_px"
                android:layout_marginRight="@dimen/two_hundred_sixteen_px"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:layout_weight=".5">
                    <ImageView
                        android:id="@+id/player_prev_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:src="@drawable/ic_boom_previous"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="right|top"
                    android:layout_weight=".5">
                    <ImageView
                        android:id="@+id/player_next_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:src="@drawable/ic_boom_next"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9.140"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="14.765"
                android:weightSum="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight=".3">
                    <ImageView
                        android:id="@+id/library_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_boom_library"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight=".4">
                    <ImageView
                        android:id="@+id/audio_effect_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:tintMode="src_atop"
                        android:src="@drawable/ic_boom_effect_off"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight=".3">
                    <ImageView
                        android:id="@+id/up_next_queue_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_boom_upnext"/>/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.438"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8.186"
                android:layout_marginLeft="@dimen/sixty_eight_px"
                android:layout_marginRight="@dimen/sixty_eight_px"
                android:orientation="horizontal"

                android:weightSum="1">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight=".3">
                    <ImageView
                        android:id="@+id/player_add_to_playlist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_to_playlist"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight=".4">
                    <ImageView
                        android:id="@+id/player_fav_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_favourites_normal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:layout_weight=".3">
                    <ImageView
                        android:id="@+id/player_more_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_player_more_button"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </FrameLayout>
</FrameLayout>