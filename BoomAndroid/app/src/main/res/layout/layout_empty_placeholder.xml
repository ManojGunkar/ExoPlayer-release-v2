<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/list_empty_placeholder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/list_empty_placeholder_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.globaldelight.boom.ui.widgets.RegularTextView
        android:id="@+id/list_empty_placeholder_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/library_empty_placeholder_txt_size"
        android:textColor="@color/library_empty_placeholder_txt_color"
        android:textStyle="bold"/>
</LinearLayout>