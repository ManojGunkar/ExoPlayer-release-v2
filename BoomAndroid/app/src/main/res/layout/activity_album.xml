<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.design.widget.CoordinatorLayout
        android:layout_above="@+id/album_mini_player"
        android:layout_alignParentTop="true"
        android:id="@+id/base_view_album"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appBackground"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbarlayout_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            app:theme="@style/ToolbarTheme">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingtoolbarlayout_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/fourty_px"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginBottom="@dimen/eighty_pt"
                app:expandedTitleTextAppearance="@style/ExpandedTransparent"
                app:layout_scrollFlags="scroll"
                app:statusBarScrim="@color/colorPrimary"
                app:theme="@style/ToolbarTheme">

                <LinearLayout
                    android:id="@+id/album_activity_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/activity_album_art"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/parallax_img_height"
                        android:layout_marginBottom="@dimen/album_title_height"
                        android:scaleType="fitXY"
                        android:transitionName="transition:imgholder"
                        app:layout_collapseMode="parallax" />

                </LinearLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_album"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="parallax"
                    app:popupTheme="@style/PopupMenu"
                    app:theme="@style/ToolbarTheme" />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_album_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/play_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/hundred_px"
            android:clickable="true"
            android:elevation="@dimen/fourty_eight_px"
            android:src="@drawable/ic_floating_play_albums"
            android:visibility="visible"
            app:backgroundTint="@color/colorPrimary"
            app:borderWidth="0dp"
            app:layout_anchor="@+id/appbarlayout_album"
            app:layout_anchorGravity="bottom|right|end" />

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/album_mini_player"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mini_player_height"
        android:elevation="12dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true">
        <include
            layout="@layout/mini_player"/>
    </LinearLayout>
</RelativeLayout>