<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/boom_play_list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/boom_playlist_list_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ToolbarSearchTheme">

        <com.globaldelight.boom.ui.widgets.RegularTextView
            android:id="@+id/boom_play_list_toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:maxLines="1"
            android:text="@string/boom_playlist_title"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_titile"
            android:textStyle="normal" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/boom_playlist_mini_player"
            android:layout_alignParentTop="true">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/playlistContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|top"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

            <LinearLayout
                android:id="@+id/playlist_empty_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_boomplaylist_placeholder"/>
                <com.globaldelight.boom.ui.widgets.RegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#787878"
                    android:gravity="center"
                    android:textSize="@dimen/eighty_eighty_pt"
                    android:text="@string/boom_playlist_placeholder_txt"
                    android:layout_marginTop="@dimen/ninety_six_pt"/>
            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/add_boom_playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sixty_four_pt"
                android:src="@drawable/ic_floating_playlist_addtracks"
                app:layout_anchor="@+id/playlistContainer"
                app:layout_anchorGravity="bottom|end"
                app:layout_behavior="com.globaldelight.boom.ui.musiclist.FloatingScrollBehavior"/>
        </android.support.design.widget.CoordinatorLayout>

        <LinearLayout
            android:id="@+id/boom_playlist_mini_player"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mini_player_height"
            android:elevation="12dp"
            android:visibility="gone"
            android:layout_alignParentBottom="true">
            <include
                layout="@layout/mini_player"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>