<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/player_action_bar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:gravity="center_vertical"
    android:elevation="2dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:gravity="left|center_vertical">
        <ImageView
            android:id="@+id/player_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/player_back_button_margin_start"
            android:background="@drawable/unbounded_ripple"
            android:src="@drawable/ic_player_title_dropdown"  />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/player_title_panel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="6.6"
        android:gravity="center">
        <com.globaldelight.boom.ui.widgets.RegularTextView
            android:id="@+id/large_player_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/player_track_title"
            android:textStyle="normal"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_weight="1"
            android:textSize="@dimen/player_title_size"
            android:gravity="center"/>

        <com.globaldelight.boom.ui.widgets.RegularTextView
            android:id="@+id/large_player_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/player_track_sub_title"
            android:textStyle="normal"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_weight="1"
            android:gravity="center_horizontal|top"
            android:textSize="@dimen/player_sub_title_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.7"
        android:layout_marginEnd="@dimen/player_menu_button_margin_end"
        android:weightSum="1"
        android:gravity="right|center_vertical">
        <LinearLayout
            android:id="@+id/player_upnext_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="@dimen/player_action_button_margin">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/unbounded_ripple"
                android:src="@drawable/ic_upnext"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player_overflow_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/unbounded_ripple"
                android:src="@drawable/ic_player_more_button"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>