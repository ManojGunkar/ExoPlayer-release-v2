<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ae0327" />
            <gradient android:angle="-90" android:endColor="#ae0327" android:startColor="#ae0328" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ae0327" />
            <solid android:color="#ae0327" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d1ae0327" />
            <gradient android:angle="-90" android:endColor="#ae0327" android:startColor="#f3ae0327" />
        </shape>
    </item>
</selector>

