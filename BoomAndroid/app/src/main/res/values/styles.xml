<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:itemBackground">@color/dialog_background</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:fontFamily">@font/titillium_web</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:fontFamily">@font/titillium_web</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme.AppBarOverlay">
        <item name="android:textColorPrimary">@color/toolbar_txt</item>
        <item name="android:textColorSecondary">@color/toolbar_txt</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="ExpandedTransparent">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RedSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorAccent</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#ffffff</item>
    </style>

    <style name="TabTextAppearance" parent="Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/music_tab_txt_size</item>
    </style>

    <style name="AppTheme.PromoCode" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MediaController" parent="@android:style/Widget.Material.Light.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ripple_media_controller</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:minHeight">0dip</item>
    </style>

    <style name="AdsTheme">
        <item name="android:background">@drawable/ads_layout_bg</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTabBarStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/music_tab_selected_color</item>
    </style>

     <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:background">@drawable/ic_boom_splash</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:alertDialogStyle">@style/AlertDialogTheme</item>
        <item name="android:colorBackground">@color/dialog_background</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/dialog_background</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <!--  <item name="layout">@layout/search_view_layout</item> -->
        <item name="searchHintIcon">@null</item>
    </style>

</resources>
