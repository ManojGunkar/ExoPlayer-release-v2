<?xml version="1.0" encoding="utf-8"?>
<resources>

        <style name="ToolbarTheme" parent="Widget.AppCompat.SearchView">
                <item name="searchViewStyle">@android:style/Widget.Material.Light.SearchView</item>
                <item name="android:textColorPrimary">@android:color/white</item>
                <item name="android:textColorSecondary">@android:color/white</item>
                <item name="android:textColorHint">@android:color/white</item>
                <item name="android:background">#1A0d0f11</item>
                <item name="searchHintIcon">@null</item>
        </style>

        <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
                <item name="android:windowFullscreen">true</item>
                <item name="android:windowDrawsSystemBarBackgrounds">true</item>
                <item name="android:windowTranslucentNavigation">true</item>
                <item name="android:navigationBarColor">@android:color/transparent</item>
                <item name="android:statusBarColor">@android:color/transparent</item>
                <item name="android:background">@drawable/ic_boom_splash</item>
        </style>

        <style name="AppTheme.NoActionBar">
                <item name="windowActionBar">false</item>
                <item name="windowNoTitle">true</item>
                <item name="android:windowDrawsSystemBarBackgrounds">true</item>
                <item name="android:statusBarColor">@color/transparent</item>
                <item name="android:textColor">@android:color/white</item>
                <item name="android:itemBackground">@color/dialog_background</item>
        </style>
</resources>