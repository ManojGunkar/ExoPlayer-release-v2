<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020308"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:gravity="center"
        android:orientation="vertical">
        <com.player.ui.widgets.RegularTextView
            android:textStyle="bold"
            android:textSize="@dimen/toolbar_titile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boom"
            android:textColor="#c3cc20"
            android:maxLines="1"
            android:id="@+id/app_name" />
        <com.player.ui.widgets.RegularTextView
            android:textStyle="normal"
            android:textSize="@dimen/speaker_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textColor="@color/white"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:id="@+id/media_item_name_txt" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:layout_gravity="center">

        <com.player.ui.widgets.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/default_album_art_home"
            android:layout_gravity="center"
            android:id="@+id/album_art"/>
        <com.player.ui.widgets.CircularSeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="25dp"
            android:id="@+id/track_seek"/>
        <ImageView
            android:id="@+id/play_pause_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_play"/>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:weightSum="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight=".3">
            <ImageView
                android:id="@+id/library_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_library"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight=".4">
            <ImageView
                android:id="@+id/audio_effect_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/boom_effect_off"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight=".3">
            <ImageView
                android:id="@+id/up_next_queue_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_library"/>/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>