<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/effect_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ToolbarSearchTheme"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true"
        android:background="@android:color/black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/black">

                <TextView
                    android:id="@+id/eff"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Effects "
                    android:textSize="20sp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/white"
                    android:maxLines="1"/>

                <ToggleButton
                    android:id="@+id/effect_power_btn"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:background="@drawable/toggle_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textOff=""
                    android:textOn=""/>

                <TextView
                    android:id="@+id/switch_effect"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="@color/color400"
                    android:maxLines="1"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/eff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/speaker_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/logo3d"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@android:drawable/arrow_down_float"/>

                <ImageButton
                    android:id="@+id/speaker_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@android:drawable/arrow_down_float"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@android:color/white"
                    android:text="3D Surround"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/logo3d"
                    android:layout_marginStart="17dp" />
            </RelativeLayout>

            <FrameLayout
                        android:id="@+id/collapsable_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"/>

                        <RelativeLayout
                            android:id="@+id/seaker_layout"
                            android:layout_width="match_parent"
                            android:layout_height="450dp"
                            android:animateLayoutChanges="true">

                            <ImageView
                                android:id="@+id/speaker_right_front"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="85dp"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/on_right_front"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true" />
                            <!--android:src="@drawable/on_right_front"-->
                            <ImageView
                                android:id="@+id/speaker_left_front"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="80dp"
                                android:src="@drawable/on_left_front"
                                android:layout_alignTop="@+id/speaker_right_front"
                                android:layout_alignParentStart="true" />
                            <!--android:src="@drawable/on_left_front"-->
                            <ImageView
                                android:id="@+id/speaker_left_surround"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1dp"
                                android:layout_marginTop="28dp"
                                android:src="@drawable/on_left_surround"
                                android:layout_below="@+id/speaker_left_tweeter"
                                android:layout_alignStart="@+id/speaker_left_tweeter" />
                            <!--android:src="@drawable/on_left_surround"-->
                            <ImageView
                                android:id="@+id/speaker_right_surround"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/on_right_surround"
                                android:layout_alignEnd="@+id/speaker_right_tweeter"
                                android:layout_alignTop="@+id/speaker_left_surround" />
                            <!--android:src="@drawable/on_right_surround"-->
                            <ImageView
                                android:id="@+id/speaker_left_tweeter"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="33dp"
                                android:src="@drawable/on_lefttweeter"
                                android:layout_below="@+id/speaker_left_front"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="50dp" />
                            <!--android:src="@drawable/on_lefttweeter"-->
                            <ImageView
                                android:id="@+id/speaker_right_tweeter"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginEnd="27dp"
                                android:src="@drawable/on_righttweeter"
                                android:layout_above="@+id/speaker_left_surround"
                                android:layout_alignParentEnd="true" />
                            <!--android:src="@drawable/on_righttweeter"-->
                            <ImageView
                                android:id="@+id/speaker_center_man"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:layout_marginTop="39dp"
                                android:src="@drawable/man_plugged"
                                android:layout_below="@+id/speaker_right_front"
                                android:layout_centerHorizontal="true" />
                            <!--android:src="@drawable/man_plugged"-->
                            <ImageView
                                android:id="@+id/speaker_sub_woofer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/on_right_surround"
                                android:layout_marginTop="23dp"
                                android:layout_below="@+id/speaker_left_surround"
                                android:layout_centerHorizontal="true" />
                            <!--android:src="@drawable/on_right_surround"-->
                        </RelativeLayout>
                    </FrameLayout>

            <RelativeLayout
                android:id="@+id/intensity_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/logo_intensity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@android:drawable/arrow_down_float"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_toEndOf="@+id/txtbar"
                    android:layout_marginStart="8dp">
                    <TextView
                        android:id="@+id/fidelity_txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/default_yellow_dark"
                        android:maxLines="1"
                        android:text="3D needs"/>
                    <TextView
                        android:id="@+id/fidelity_txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/default_yellow_dark"
                        android:maxLines="1"
                        android:text="Fidelity ON"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/intensity_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@android:color/white"
                    android:text="Intensity"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/logo_intensity"
                    android:layout_marginStart="17dp" />

                <TextView
                    android:id="@+id/txtbar"
                    android:layout_width="2dp"
                    android:layout_height="35dp"
                    android:background="@android:color/darker_gray"
                    android:layout_toEndOf="@+id/intensity_txt"
                    android:layout_marginStart="16dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">
                <com.player.ui.widgets.NegativeSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/circle_image"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@android:color/transparent"
                    android:id="@+id/intensity_seek"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/eq_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/logoeq"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@android:drawable/arrow_down_float"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@android:color/white"
                    android:text="Equalizer"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/logoeq"
                    android:layout_marginStart="17dp" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/eq_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>