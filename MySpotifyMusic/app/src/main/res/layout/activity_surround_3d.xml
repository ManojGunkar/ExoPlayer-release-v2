<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/three_d_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020308"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/effect_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ToolbarSearchTheme">
        <com.player.ui.widgets.RegularTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Effects"
            android:gravity="center_vertical|left"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:maxLines="1"
            android:id="@+id/toolbr_title"
            android:textSize="@dimen/toolbar_titile" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:elevation="10dp"
                android:background="#020b17"
                android:weightSum="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:layout_weight=".5"
                    android:orientation="horizontal">

                    <com.player.ui.widgets.RegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Effects"
                        android:textColor="@color/white"
                        android:maxLines="1"
                        android:textStyle="normal"
                        android:textSize="@dimen/effect_switch_txt"
                        android:id="@+id/effect_txt" />
                    <com.player.ui.widgets.RegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="on"
                        android:textColor="#ffffff"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:textSize="@dimen/effect_switch_txt"
                        android:id="@+id/effect_switch_txt" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight=".5"
                    android:gravity="center_vertical|right">s
                    <ToggleButton
                        android:id="@+id/effect_power_btn"
                        android:layout_width="30dp"
                        android:layout_height="18dp"
                        android:background="@drawable/toggle_selector"
                        android:text=""
                        android:textOff=""
                        android:textOn=""/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:paddingRight="30dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:weightSum="1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".23"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/three_d_surround_off"
                            android:id="@+id/three_d_switch_btn" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:layout_weight=".6"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <com.player.ui.widgets.RegularTextView
                                android:textStyle="normal"
                                android:textSize="@dimen/toolbar_titile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3D Surround"
                                android:textColor="@color/white"
                                android:maxLines="1"
                                android:id="@+id/three_d_txt" />
                            <com.player.ui.widgets.RegularTextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="@dimen/toolbar_titile"
                                android:text="ON"
                                android:textColor="@color/white"
                                android:maxLines="1"
                                android:id="@+id/three_d_switch_txt" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight=".13"
                        android:gravity="center_vertical|right">
                        <ImageView
                            android:id="@+id/speaker_switch_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/three_d_speakers_off"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".23"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".77">
                        <com.player.ui.widgets.RegularTextView
                            android:id="@+id/speaker_info"
                            android:textStyle="normal"
                            android:textSize="@dimen/speaker_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Some speakers are Off"
                            android:maxLines="1"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".23"/>
                    <LinearLayout
                        android:id="@+id/full_bass_panel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_weight=".77">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/full_bass_off"
                            android:id="@+id/full_bass_radio" />
                        <com.player.ui.widgets.RegularTextView
                            android:id="@+id/fullbass_txt"
                            android:textStyle="normal"
                            android:textSize="@dimen/fullbass_txt"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Bass"
                            android:maxLines="1"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/collapsable_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"/>

                <RelativeLayout
                    android:id="@+id/seaker_layout"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:animateLayoutChanges="true">

                    <ImageView
                        android:id="@+id/speaker_right_front"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="85dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/off_right_front"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />
                    <!--android:src="@drawable/on_right_front"-->
                    <ImageView
                        android:id="@+id/speaker_left_front"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:src="@drawable/off_left_front"
                        android:layout_alignTop="@+id/speaker_right_front"
                        android:layout_alignParentStart="true" />
                    <!--android:src="@drawable/on_left_front"-->
                    <ImageView
                        android:id="@+id/speaker_left_surround"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="28dp"
                        android:src="@drawable/off_left_surround"
                        android:layout_below="@+id/speaker_left_tweeter"
                        android:layout_alignStart="@+id/speaker_left_tweeter" />
                    <!--android:src="@drawable/on_left_surround"-->
                    <ImageView
                        android:id="@+id/speaker_right_surround"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/off_right_surround"
                        android:layout_alignEnd="@+id/speaker_right_tweeter"
                        android:layout_alignTop="@+id/speaker_left_surround" />
                    <!--android:src="@drawable/on_right_surround"-->
                    <ImageView
                        android:id="@+id/speaker_left_tweeter"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="33dp"
                        android:src="@drawable/off_lefttweeter"
                        android:layout_below="@+id/speaker_left_front"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="50dp" />
                    <!--android:src="@drawable/on_lefttweeter"-->
                    <ImageView
                        android:id="@+id/speaker_right_tweeter"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="27dp"
                        android:src="@drawable/off_righttweeter"
                        android:layout_above="@+id/speaker_left_surround"
                        android:layout_alignParentEnd="true" />
                    <!--android:src="@drawable/on_righttweeter"-->
                    <ImageView
                        android:id="@+id/speaker_center_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:layout_marginTop="39dp"
                        android:src="@drawable/man_off"
                        android:layout_below="@+id/speaker_right_front"
                        android:layout_centerHorizontal="true" />
                    <!--android:src="@drawable/man_plugged"-->
                    <ImageView
                        android:id="@+id/speaker_sub_woofer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/off_right_surround"
                        android:layout_marginTop="23dp"
                        android:layout_below="@+id/speaker_left_surround"
                        android:layout_centerHorizontal="true" />
                    <!--android:src="@drawable/on_right_surround"-->
                </RelativeLayout>
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#222327"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:paddingRight="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".23"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/intensity_off"
                            android:id="@+id/intensity_switch_btn" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".77"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <com.player.ui.widgets.RegularTextView
                            android:textStyle="normal"
                            android:textSize="@dimen/toolbar_titile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Intensity"
                            android:textColor="@color/white"
                            android:layout_marginRight="5dp"
                            android:maxLines="1"
                            android:id="@+id/intensity_txt" />

                        <com.player.ui.widgets.RegularTextView
                            android:textStyle="bold"
                            android:textSize="@dimen/toolbar_titile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ON"
                            android:textColor="@color/white"
                            android:layout_marginRight="20dp"
                            android:maxLines="1"
                            android:id="@+id/intensity_switch_txt" />

                        <LinearLayout
                            android:id="@+id/intensity_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="invisible"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="3dp"
                                android:layout_marginTop="3dp"
                                android:background="@color/progress_gray"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:orientation="vertical">
                                <com.player.ui.widgets.RegularTextView
                                    android:textStyle="normal"
                                    android:textSize="@dimen/speaker_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3D needs"
                                    android:maxLines="1"
                                    android:textColor="#c3cc20"/>
                                <com.player.ui.widgets.RegularTextView
                                    android:textStyle="normal"
                                    android:textSize="@dimen/speaker_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="intensity ON"
                                    android:maxLines="1"
                                    android:textColor="#c3cc20"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <com.player.ui.widgets.NegativeSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="20dp"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@android:color/transparent"
                    android:id="@+id/intensity_seek"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#222327"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingRight="30dp"
                    android:weightSum="1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".23"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/equalizer_off"
                            android:id="@+id/equalizer_switch_btn" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".77"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <com.player.ui.widgets.RegularTextView
                            android:textStyle="normal"
                            android:textSize="@dimen/toolbar_titile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Equalizer"
                            android:textColor="@color/white"
                            android:layout_marginRight="5dp"
                            android:maxLines="1"
                            android:id="@+id/equalizer_txt" />

                        <com.player.ui.widgets.RegularTextView
                            android:textStyle="bold"
                            android:textSize="@dimen/toolbar_titile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ON"
                            android:textColor="@color/white"
                            android:layout_marginRight="20dp"
                            android:maxLines="1"
                            android:id="@+id/equalizer_switch_txt" />
                        <LinearLayout
                            android:id="@+id/equalizer_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="3dp"
                                android:layout_marginTop="3dp"
                                android:background="@color/progress_gray"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:orientation="vertical">

                                <com.player.ui.widgets.RegularTextView
                                    android:textStyle="normal"
                                    android:textSize="@dimen/speaker_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3D needs"
                                    android:maxLines="1"
                                    android:textColor="#c3cc20"/>
                                <com.player.ui.widgets.RegularTextView
                                    android:textStyle="normal"
                                    android:textSize="@dimen/speaker_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="equalizer ON"
                                    android:maxLines="1"
                                    android:textColor="#c3cc20"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/eq_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#020308"
                    android:overScrollMode="never"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>